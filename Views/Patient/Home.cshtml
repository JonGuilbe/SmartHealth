		<!-- APPOINTMENTS LIST -->
		<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading" style="background-color: #28c574; color: #ffffff; font-size: 28px; font-family:Arial">
				Appointments
			</div>
			<div class="panel-body" style="overflow-y: scroll; height: 250px">
			<!-- insert appointment code -->
				<table class="table">
					<tr>
						<th>Name</th>
						<th>Time</th>
						<th>Date</th>
						<th>Link</th>
					</tr>
					@foreach (var app in Model.Appointments) {
						<tr>
							<td>@Html.DisplayFor(x => app.Service)</td>
							<td>@Html.DisplayFor(x => app.starttime) - @Html.DisplayFor(x => app.endtime)</td>
							<td>@Html.DisplayFor(x => app.Date)</td>
							<td><a asp-area="" asp-controller="Appointment" asp-Action="ViewApp" asp-route-id="@app.Id">Details</a></td>
						</tr>
					}
				</table>
			
			</div>
			<div class="panel-footer" style="background-color: #28c574; color: #ffffff; font-family: Arial"> Footer</div>
		</div>
		</div>
		 
		<!-- MESSAGES -->
		<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading" style="background-color: #28c574; color: #ffffff; font-size: 28px; font-family:Arial">
				Messages
			</div>			
			<div class="panel-body">
				<ul>
					@foreach (var msg in Model.Messages) 
					{
						<li> 
							From: @Html.DisplayFor(x => msg.DoctorName) at @Html.DisplayFor(x => msg.messagetime)       
							@Html.DisplayFor(x => msg.MessageString) <a asp-area="" asp-controller="Message" asp-Action="Conversation" asp-route-id="@msg.DoctorID">Go To Conversation</a> 
						</li>
					}
				</ul>
			</div>	
			<div class="panel-footer" style="background-color: #28c574; color: #ffffff; font-family: Arial">Footer</div>		
		</div>
		</div>

	</div>