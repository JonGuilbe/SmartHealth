@model PatientViewModel
@{
	ViewData["Title"] = "Home Dashboard";
}

<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="pstyle.css">

<hr /><h2>Home Dashboard</h2><hr />

	<div class="container" >
		<!-- APPOINTMENTS LIST -->
		<div class="row">
		<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading" style="background-color: #28c574; color: #ffffff; font-size: 28px; font-family:Arial">
				Appointments
			</div>
			<div class="panel-body" style="overflow-y: scroll; height: 250px">
			<!-- insert appointment code -->
				<table class="table">
					<tr>
						<th>Name</th>
						<th>Time</th>
						<th>Date</th>
						<th>Link</th>
					</tr>
					@foreach (var app in Model.Appointments) {
						<tr>
							<td>@Html.DisplayFor(x => app.Service)</td>
							<td>@Html.DisplayFor(x => app.starttime) - @Html.DisplayFor(x => app.endtime)</td>
							<td>@Html.DisplayFor(x => app.Date)</td>
							<td><a asp-area="" asp-controller="Appointment" asp-Action="ViewApp" asp-route-id="@app.Id">Details</a></td>
						</tr>
					}
				</table>
			
			</div>
			<div class="panel-footer" style="background-color: #28c574; color: #ffffff; font-family: Arial"></div>
		</div>
		</div>
		</div>
		 <br><br>
		<!-- MESSAGES -->
		<div class="row">
		<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading" style="background-color: #28c574; color: #ffffff; font-size: 28px; font-family:Arial">
				Messages
			</div>			
			<div class="panel-body" style="overflow-y: scroll; height: 150px">
				<ul>
					@foreach (var msg in Model.Messages) 
					{
						<li> 
							From: @Html.DisplayFor(x => msg.DoctorName) at @Html.DisplayFor(x => msg.messagetime):<br />       
							@Html.DisplayFor(x => msg.MessageString) <br /> <a asp-area="" asp-controller="Message" asp-Action="Conversation" asp-route-id="@msg.DoctorID"><b>Go To Conversation</b></a> 
						</li>
					}
				</ul>
			</div>	
			<div class="panel-footer" style="background-color: #28c574; color: #ffffff; font-family: Arial"></div>		
		</div>
		</div>
		</div>

	</div>