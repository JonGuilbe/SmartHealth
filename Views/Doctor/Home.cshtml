	<div class="container" >

		<!-- APPOINTMENTS -->
		<div class="row">
		<div class="col-md-12">
		<div class="panel panel-default">
			<div class="panel-heading" style="background-color: #28c574; color: #ffffff; font-size: 28px; font-family:Arial">
				Appointments
			</div>
			<div class="panel-body" style="overflow-y: scroll; height: 250px">
			<!-- insert appointment code -->
				<table class="table">
					<tr>
						<th>Name</th>
						<th>Time</th>
						<th>Date</th>
						<th>Link</th>
					</tr>
					@foreach (var app in Model.Appointments) {
						<tr>
							<td>@Html.DisplayFor(x => app.Service)</td>
							<td>@Html.DisplayFor(x => app.starttime) - @Html.DisplayFor(x => app.endtime)</td>
							<td>@Html.DisplayFor(x => app.Date)</td>
							<td><a asp-area="" asp-controller="Appointment" asp-Action="ViewApp" asp-route-id="@app.Id">Details</a></td>
						</tr>
					}
				</table>
			<!-- x -->
			</div>
			<div class="panel-footer" style="background-color: #28c574; color: #ffffff; font-family: Arial"></div>
		</div>
		</div>
        </div>
